<html>
  <head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/CSS/index.css">
    <script type="text/javasript" src="/JS/index.js"></script>
  </head>

  <body>
    <div class="header">
            <a href="/" class="home">READit</a>
    </div>

    <br>

    <center>
      <div id="login" class="row container">
        <form class="col s8 offset-s2 card" action="/login" method="post">
          <div class="card-content">
            <div class="row">
              <div class="col s12">
                <p class="card-title center-align">Login</p>
              </div>
            </div>
            {{> messages}}
            <div class="row">
              <div class="col s12 input-field mb-4">
                <label for="username">Username</label>
                <input placeholder="username" type="text" id="username" name="username" />
              </div>
            </div>

            <div class="row">
              <div class="col s12 mb-4">
                <label for="password">Password</label>
                <input placeholder="password" type="password" id="password" name="password" />

              </div>
            </div>

            <div class="row  center-align">
              <div class="col s12">
                <button class="waves-effect waves-light btn btn-success">Login</button>
              </div>
            </div>

            <div class="row center-align">
              <div class="col s12 bottomMessage">
                <p>Don't have an account? <a href="/register">Sign up now</a>!</p>
              </div>
            </div>
          </div>
        </form>
      </div>
    </center>
  </body>
</html>