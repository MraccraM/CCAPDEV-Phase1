<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/CSS/index.css">
        <script type="text/javasript" src="/JS/index.js"></script>
    </head>
    <body>
        <div class="header">
            <a href="/" class="home">READit</a>

            <a href="/logout" id="nav" class="btn btn-danger d-inline">Logout</a>
            <a href="/login" id="nav" class="btn btn-warning d-inline">Login</a>
            <a href="/addPost" id="nav" class="btn btn-primary d-inline">Add Post</a>
        </div>

        <br>
        
        {{#each post}}
            {{> card}}
        {{/each}}
       
        <br><br><br>

        <form action="/{{#each post}}{{this._id}}{{/each}}/comment" method="post" id="content">
            Comment: <br> <textarea name="content" rows="5" cols="100" class="mb-2"></textarea><br />
            
            <button class="btn btn-primary mb-5" type="submit">Submit</button>
        </form>
        <text>Comments: </text>
        {{#each post}}
            {{#each this.comments}}
                {{> comment}}
            {{/each}}
        {{/each}}
    </body>
</html>